<%= simple_form_for([@current_race,@result]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :starting_no, disabled: @disable_starting_no %>
  <%= f.input :position %>
  <div class="form-group string optional">
    <label class="string optional col-lg-2 control-label" for="result_time_min">ÄŒas</label>
    <div class="col-lg-10">
      <div class="row">
        <div class="col-xs-2">
          <input class="numeric string optional form-control" id="result_time_min" name="result[time][min]" type="text" value="<%= @result.time.min %>" />
        </div>
        <span class="pull-left">
          :
        </span>
        <div class="col-xs-2">
          <input class="numeric string optional form-control" id="result_time_sec" name="result[time][sec]" type="text" value="<%= @result.time.sec %>" />
        </div>
        <span class="pull-left">
          .
        </span>
        <div class="col-xs-2">
          <input class="numeric string optional form-control" id="result_time_fract" name="result[time][fract]" type="text" value="<%= @result.time.fract %>" />
        </div>
      </div>
    </div>
  </div>

  <%= f.button :submit %>
<% end %>
