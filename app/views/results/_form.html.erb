<%= simple_form_for([@current_race,@result]) do |f| %>
  <%= f.error_notification %>
  <%= display_nonstandard_errors @result %>

  <div class="form-inputs">
    <%= f.simple_fields_for(@participant) do |builder| %>
      <%= builder.input :starting_no %>
    <% end %>
    <%= f.input :position %>
    <div class="control-group string optional">
      <label class="string optional control-label" for="result_time_min">ÄŒas</label>
      <div class="controls">
        <input class="numeric string optional" id="result_time_min" name="result[time][min]" type="text" value="<%= @result.time_min %>" />:
        <input class="numeric string optional" id="result_time_sec" name="result[time][sec]" type="text" value="<%= @result.time_sec %>" />.
        <input class="numeric string optional" id="result_time_fract" name="result[time][fract]" type="text" value="<%= @result.time_fract %>" />
      </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
