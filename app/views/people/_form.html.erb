<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :full_name %>
    <%= f.input :yob %>
    <%= f.input :born %>
    <%= f.input :county_id %>
    <%= f.input :id_string %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
