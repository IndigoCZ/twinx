<h1>Přehled Závodů</h1>
<% if @races.size > 0 %>
  <% race=@races.shift %>
<div class="hero-unit" id="hero_race">
  <h1><%= race.title %></h1>
  <div class="btn-group">
    <%= link_to "Účastníci", race_participants_path(race), class:"btn btn-large btn-primary" %>
    <%= link_to "Výsledky" , race_results_path(race)     , class:"btn btn-large btn-primary" %>
    <%= link_to "Kategorie", race_categories_path(race)  , class:"btn btn-large" %>
    <%= link_to "Jednoty"  , race_teams_path(race)       , class:"btn btn-large" %>
    <%= link_to "Smazat"   , race                        , class:"btn btn-large btn-inverse", method: :delete, data: { confirm: 'Jste si jisti?' } %>
  </div>
</div>
<% end %>
<ul class="thumbnails">
  <% @races.each do |race| %>
    <li class="span6">
  <div class="thumbnail">
    <div class="caption">
      <h3><%= race.title %></h3>
      <div class="btn-group">
        <%= link_to "Účastníci", race_participants_path(race), class:"btn btn-primary" %>
        <%= link_to "Výsledky" , race_results_path(race)     , class:"btn btn-primary" %>
        <%= link_to "Kategorie", race_categories_path(race)  , class:"btn" %>
        <%= link_to "Jednoty"  , race_teams_path(race)       , class:"btn" %>
        <%= link_to "Smazat"   , race                        , class:"btn btn-inverse", method: :delete , data: { confirm: 'Jste si jisti?' } %>
      </div>
    </div>
  </div>
  </li>
<% end %>
</ul>
<%= link_to 'Nový závod', new_race_path, class:"btn btn-primary" %>
