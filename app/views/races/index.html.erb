<h1>Přehled Závodů</h1>
<% if @races.size > 0 %>
  <% race=@races.shift %>
<div class="jumbotron" id="hero_race">
  <h1><%= race.title %></h1>
  <p><div class="btn-group">
    <%= link_to "Účastníci", race_participants_path(race), class:"btn btn-large btn-primary span2" %>
    <%= link_to "Výsledky" , race_results_path(race,group:"category")     , class:"btn btn-large btn-primary span2" %>
  </div></p>
  <p><div class="btn-group">
    <%= link_to "Kategorie", race_categories_path(race)  , class:"btn btn-large btn-default span2" %>
    <%= link_to "Jednoty"  , race_teams_path(race)       , class:"btn btn-large btn-default span2" %>
    <%= link_to "Smazat"   , race                        , class:"btn btn-large btn-danger span2", method: :delete, data: { confirm: 'Jste si jisti?' } %>
  </div></p>
</div>
<% end %>
<div class="row">
  <% @races.each do |race| %>
<div class="col-md-6">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= race.title %></h3>
        <p><div class="btn-group">
          <%= link_to "Účastníci", race_participants_path(race), class:"btn btn-primary span1" %>
          <%= link_to "Výsledky" , race_results_path(race,group:"category")     , class:"btn btn-primary span1" %>
        </div></p>
        <p><div class="btn-group">
          <%= link_to "Kategorie", race_categories_path(race)  , class:"btn btn-default span1" %>
          <%= link_to "Jednoty"  , race_teams_path(race)       , class:"btn btn-default span1" %>
          <%= link_to "Smazat"   , race                        , class:"btn btn-danger span1", method: :delete , data: { confirm: 'Jste si jisti?' } %>
        </div></p>
      </div>
    </div>
</div>
  <% end %>
</div>
<%= link_to 'Nový závod', new_race_path, class:"btn btn-primary" %>
