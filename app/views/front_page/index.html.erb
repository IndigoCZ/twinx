<h1>Vyberte zavod</h1>
<% if @races.size > 0 %>
<% race=@races.shift %>
<div class="hero-unit">
  <h1><%= race.title %></h1>
  <p>
        <%= link_to "Ucastnici", race_participants_path(race), class:"btn btn-large btn-primary" %>
        <%= link_to "Vysledky", race_results_path(race)      , class:"btn btn-large" %>
        <%= link_to "Kategorie", race_categories_path(race)  , class:"btn btn-large" %>
        <%= link_to "Jednoty"  , race_teams_path(race)       , class:"btn btn-large" %>
  </p>
</div>
<% end %>
<ul class="thumbnails">
  <% @races.each do |race| %>
    <li class="span4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= race.title %></h3>
        <p>
        <%= link_to "Ucastnici", race_participants_path(race), class:"btn btn-primary" %>
        <%= link_to "Vysledky", race_results_path(race)      , class:"btn " %>
        <%= link_to "Kategorie", race_categories_path(race)  , class:"btn" %>
        <%= link_to "Jednoty"  , race_teams_path(race)       , class:"btn" %>
        </p>
      </div>
    </div>
    </li>
  <% end %>
</ul>
