<%= simple_form_for([@current_race, @participant]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :starting_no %>
    <%= simple_fields_for(@person) do |p| %>
      <%= p.input :first_name %>
      <%= p.input :last_name %>
      <%= p.input :yob %>
      <%= p.input :sex %>
    <% end %>
    <%= simple_fields_for(@county) do |c| %>
      <%= c.input :title %>
    <% end %>
    <%= f.association :category, :collection => @categories, :prompt => "Please select category"   %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
