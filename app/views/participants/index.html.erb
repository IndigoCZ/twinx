<h1>Přehled Účastníků</h1>
<%= link_to "Nový Účastník", new_race_participant_path(@current_race), :class => 'btn btn-primary' %>
<table>
  <tr>
    <th>Jméno</th>
    <th>Příjmení</th>
    <th>Tým</th>
    <th>Kategorie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @participants.each do |participant| %>
  <tr>
    <td><%= participant.person.first_name %></td>
    <td><%= participant.person.last_name %></td>
    <td><%= participant.team.county.title %></td>
    <td><%= participant.category.title %></td>
    <td><%= link_to 'Zobrazit', [@current_race, participant] %></td>
    <td><%= link_to 'Upravit', edit_race_participant_path(@current_race,participant) %></td>
    <td><%= link_to 'Smazat', race_participant_path(@current_race,participant), method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
  </tr>
<% end %>
</table>
