<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= sort_link("#") %></th>
      <th><%= sort_link("JmÃ©no",:name) %></th>
      <th><%= filter_combo("Jednota",:team) %></th>
      <th><%= filter_combo("Kategorie",:category) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.starting_no %></td>
        <td><%= participant.person.display_name %></td>
        <td><%= participant.team.title %></td>
        <td><%= participant.category.title %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Upravit', edit_race_participant_path(@current_race,participant), :class => 'btn btn-xs btn-default' %>
            <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Zobrazit', [@current_race, participant] %></li>
              <li><%= link_to 'Smazat', race_participant_path(@current_race,participant), method: :delete, data: { confirm: 'Jste si jisti?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
