<h1>Nový účastník</h1>

<%= render 'form' %>
<% if @previous_participant %>
  <div class="col-lg-12 alert alert-info">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h1>Předchozí účastník</h1>
    <%= render partial: 'detail', locals: {participant: @previous_participant} %>
  </div>
<% end %>
<div class="col-lg-12">
  <%= link_to 'Zpět', race_participants_path(@current_race), class:"btn btn-default" %>
</div>
