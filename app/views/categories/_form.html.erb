<%= simple_form_for([@current_race, @category],html:{ :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= display_nonstandard_errors @category %>


<div class="form-inputs">
  <div class="row">
    <%= f.input :title,wrapper_html:{ :class => 'span6' } %>
  </div>
  <h3>Omezení</h3>
  <div id="constraints">

    <%= f.simple_fields_for :constraints do |builder| %>
      <%= render 'constraint_fields', f: builder %>
    <% end %>
    <div class="links">
    <%= link_to_add_association 'Přidat', f, :constraints, class:"btn" %>
  </div>
  </div>
</div>
<%= f.hidden_field :race_id, value:@current_race.id  %>
<div class="form-actions">
  <%= f.button :submit %>
</div>
  <% end %>
