<%= simple_form_for([@current_race, @category]) do |f| %>
  <%= f.error_notification %>
  <%= display_nonstandard_errors @category %>


<div class="form-inputs">
    <%= f.input :title %>
  <h3>Omezení</h3>
  <div id="constraints">

    <%= f.simple_fields_for :constraints do |builder| %>
      <%= render 'constraint_fields', f: builder %>
    <% end %>
    <div class="links">
    <%= link_to_add_association 'Přidat', f, :constraints, class:"btn btn-success" %>
  </div>
  </div>
</div>
<%= f.hidden_field :race_id, value:@current_race.id  %>
<div class="form-actions">
  <%= f.button :submit, class:"btn-primary" %>
</div>
  <% end %>
